<section class="contact">
  <div>
    <h2 id="CONTACT_HEADER">{import.meta.env.CONTACT_HEADER}</h2>
    <p>
      <span id="CONTACT_DESCRIPTION">
        {import.meta.env.CONTACT_DESCRIPTION}
      </span>
      <!-- &nbsp; -->
      <a href={`mailto:${import.meta.env.EMAIL}`}
        ><strong id="EMAIL">{import.meta.env.EMAIL}</strong></a
      >
    </p>
  </div>
  <form name="contact" data-netlify="true">
    <label for="contact-name">Name</label>
    <div class="cool-border">
      <input id="contact-name" name="name" required />
    </div>
    <label for="contact-email">Email Address</label>
    <div class="cool-border">
      <input id="contact-email" type="email" name="email" required />
    </div>
    <label for="contact-phone">Phone</label>
    <div class="cool-border">
      <input id="contact-phone" type="tel" name="phone" />
    </div>
    <label for="contact-subject">Subject</label>
    <div class="cool-border">
      <input id="contact-subject" name="subject" required />
    </div>
    <label for="contact-message">Message</label>
    <div class="cool-border">
      <textarea id="contact-message" name="message" required></textarea>
    </div>
    <button type="submit"><span>Submit</span></button>
  </form>
</section>

<style>
  @media (max-width: 970px) {
    .contact {
      flex-direction: column;
    }
    .contact :is(h2, p, span) {
      text-align: center !important;
    }
    .contact > * {
      padding: 0 !important;
    }
    /* .contact span {
      justify-content: center;
    } */
  }

  .contact {
    --primary: var(--clr-secondary);
    --secondary: var(--clr-primary);
    --other-secondary: var(--clr-primary);
    display: flex;
    width: 100%;
    /* height: 100%; */
    background-color: var(--primary);
    color: var(--secondary);
	padding: 3rem 0.75rem;
  }
  .contact > div {
  }
  /* .contact span {
    display: flex;
    width: 100%;
    justify-content: end;
    /* flex-direction: column; */
  /* }  */

  .contact > *:not(button) {
    flex: 1;
    /* width: 50%; */
  }
  .contact > :first-child {
    padding-right: 0.5rem;
  }
  .contact > :last-child {
    padding-left: 0.5rem;
  }

  .contact :is(h2, p, span) {
    text-align: right;
    word-wrap: break-word;
  }

  .contact form {
  }

  .contact textarea {
    height: 10rem;
    max-width: 100%;
  }

  .contact button {
	flex: unset;
  }
</style>
