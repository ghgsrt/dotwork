---
import type { ImageMetadata } from "astro";
import { Image as AstroImage } from "astro:assets";

interface Props {
  type: "icon" | "image";
  src: string;
  alt: string;
  width: number;
  height: number;
  format: string;
}

const { type, src, format, alt, width, height } = Astro.props;

const trueSrc = `/src/assets/${type}s/${src}`;
const glob = `/src/assets/${type}s/*.{jpeg,jpg,png,gif}`;

const images = import.meta.glob<{ default: ImageMetadata }>(glob);
if (!images[trueSrc])
  throw new Error(
    `"${trueSrc}" does not exist in glob: "src/assets/${type}s/*.{jpeg,jpg,png,gif}"`,
  );
---

<AstroImage
  src={images[trueSrc]()}
  format={format}
  alt={alt}
  width={width}
  height={height}
/>
